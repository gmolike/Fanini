# .env.example
# Example environment variables

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000
VITE_MOCK_API_ENABLED=true

# External Services
VITE_GOOGLE_DRIVE_CLIENT_ID=your-google-client-id
VITE_EASYVEREIN_CLIENT_ID=your-easyverein-client-id
VITE_EASYVEREIN_REDIRECT_URI=http://localhost:5173/auth/callback

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false

# Static Assets
VITE_CDN_URL=https://cdn.fanini.live
VITE_DEFAULT_AVATAR_URL=/images/default-avatar.jpg
