{
  "compilerOptions": {
    // TypeScript 5.7 Features & Target
    "target": "ES2024",
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    // React 19
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    // Stricteste Type-Safety
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    // Module System
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    // Performance
    "skipLibCheck": true,
    "incremental": true,
    // Output
    "noEmit": true,
    "sourceMap": true,
    // FSD Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    },
    // Vite/Node Support
    "types": [
      "vite/client",
      "node"
    ],
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "tailwind.config.ts",
    "src/pages/_public/.tsx",
    "eslint/**/*",
    "demo/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}