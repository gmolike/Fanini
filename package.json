{
  "name": "react-fsd-fullstack-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Modern React FSD Full-Stack Application with TypeScript",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/react-fsd-fullstack#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/react-fsd-fullstack.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/react-fsd-fullstack/issues"
  },
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"blue,green\" \"pnpm:dev:*\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "preview": "pnpm -r preview",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:ui": "pnpm -r test:ui",
    "test:coverage": "pnpm -r test:coverage",
    "clean": "pnpm -r clean && rimraf node_modules",
    "clean:install": "pnpm clean && pnpm install",
    "prepare": "husky install",
    "docker:dev": "docker-compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker/docker-compose.yml -f docker/docker-compose.prod.yml up",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "release": "changeset publish",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "cd frontend && pnpm lint:fix",
      "cd frontend && pnpm format"
    ],
    "backend/**/*.{ts,js}": [
      "cd backend && pnpm lint:fix",
      "cd backend && pnpm format"
    ],
    "shared/**/*.{ts,js}": [
      "cd shared && pnpm lint:fix",
      "cd shared && pnpm format"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
